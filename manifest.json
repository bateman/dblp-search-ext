{
    "manifest_version": 3,
    "name": "dblp Search",
    "version": "1.0",
    "description": "Highlight text on a webpage, right-click, and search on dblp for the corresponding research paper.",
    "icons": {
        "48": "images/icon.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "contextMenus",
        "scripting",
        "webRequest",
        "clipboardWrite"
    ],
    "host_permissions": [
        "https://*/",
        "http://*/"
    ],
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/magnifier-icon.png",
                "images/icon.png",
                "images/dblp-logo.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}