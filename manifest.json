{
    "manifest_version": 3,
    "name": "Dblp Search",
    "version": "1.0",
    "description": "Highlight text on a webpage, right-click, and search on Dblp for the corresponding research paper.",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "magnifier-icon.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}